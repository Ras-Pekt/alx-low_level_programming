#include "main.h"

/**
 * main - check the code
 * @a: an array of integers
 * @n: the number of elements to swap
 * @count: counter
 * Return: void
 */

void reverse_array(int *a, int n)
{
	int count = 0;
	int temp_a;

	while (count < n--)
	{
		temp_a = a[count];
		a[count] = a[n];
		a[n] = temp_a;
		count++;
	}
}
